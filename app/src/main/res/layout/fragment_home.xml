<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.sungshin.essential.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안녕하세요, __님"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="5dp"/>


    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="당신이 원하는 모습은 무엇인가요?"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="매일 챌린지를 달성하고"
        android:layout_marginLeft="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원하는 나로 거듭나세요!"
        android:layout_marginLeft="60dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnWorkout"
        android:layout_width="340dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_round"
        android:backgroundTint="#CD37B7F1"
        android:text="건강한 몸 만들기\n스트레칭과 운동을 통해\n건강한 몸을 만들어 보세요!"
        android:textColor="#000000"
        android:textStyle="bold"
        android:drawableRight="@drawable/healthyhabbit1">

    </androidx.appcompat.widget.AppCompatButton>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEnglish"
        android:layout_width="340dp"
        android:layout_height="138dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_round"
        android:backgroundTint="#DAFB7A3D"
        android:text="영어 정복\nTOEIC 900+를 향해"
        android:textColor="#000000"
        android:textStyle="bold"
        android:drawableLeft="@drawable/englishstudy1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAssignment"
        android:layout_width="340dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_round"
        android:backgroundTint="#8FD49AF3"
        android:text="과탑이 되고 싶어\n오늘 배운 키워드를 정리해보세요!"
        android:textColor="#000000"
        android:textStyle="bold"
        android:drawableRight="@drawable/assignment1"/>



</LinearLayout>